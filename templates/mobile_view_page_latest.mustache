<core-tabs selectedIndex="0" [hideUntil]="true">
    <%#tabList%>
        <core-tab [title]="'<%title%>'">
            <ng-template>
                <%#html%>
                    <div style="padding: 5px">
                        <core-format-text text="<% html %>"></core-format-text>
                    </div>
                <%/html%>
                <%^html%>
                    <core-iframe [src]="'<% url %>'" [allowFullscreen]=true [iframeHeight]="1000">></core-iframe>
                <%/html%>
            </ng-template>
        </core-tab>
    <%/tabList%>
</core-tabs>

